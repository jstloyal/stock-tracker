<h1>My Portfolio</h1>
<div class="search-area">
  <h3>Search Stocks</h3>
  <%= form_tag search_stock_path, method: :get do %>
    <div class="form-group row">
      <div class="col-sm-9 no-right-padding">
        <%= text_field_tag :stock, params[:stock], placeholder: 'Stock ticker symbol', autofocus: true, class: 'form-control for-control-lg' %>
      </div>
      <div class="col-sm-3 no-left-padding">
        <%= button_tag type: :submit, class: 'btn btn-success' do %>
          <%= fa_icon 'search 1.5x' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<% if @my_stock %>
  <div class="card card-header result-block">
    <strong>Symbol:</strong><%= @my_stock.ticker %>
    <strong>Name:</strong><%= @my_stock.name %>
    <strong>Price($):</strong><%= @my_stock.last_price %>
  </div>
<% end %>
